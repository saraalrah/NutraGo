<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Color -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d1ecff" />

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        android:contentDescription="Background" />

    <!-- Categories Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/categoriesCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F8FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Categories Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏷️ Categories"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#220F84"
                android:layout_marginBottom="12dp" />

            <!-- Categories Horizontal ScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/categoriesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" />

            </HorizontalScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Products RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/categoriesCard"
        android:layout_above="@+id/bottomSpace"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="1dp"
        android:padding="4dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_product_card" />

    <!-- Bottom Space for Navigation -->
    <View
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true" />

    <!-- Add Product FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/bottomSpace"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Product"
        app:backgroundTint="#009688"
        app:tint="@android:color/white" />

</RelativeLayout>