<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Color -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d1ecff" />

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        android:contentDescription="Background" />

    <!-- Main Content -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- رسالة السلة الفارغة -->
        <TextView
            android:id="@+id/emptyCartTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="🛒 السلة فارغة\n\nأضف بعض المنتجات من صفحة الجاليري!"
            android:textSize="18sp"
            android:textColor="#666666"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

        <!-- قائمة المنتجات في السلة -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />

        <!-- ملخص السلة -->
        <LinearLayout
            android:id="@+id/cartSummaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F4F6FF"
            android:layout_marginBottom="80dp"

            android:layout_gravity=""
            android:padding="16dp"
            android:elevation="4dp">

            <!-- خط فاصل -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <!-- إجمالي السعر -->
            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الإجمالي: 0.00 ريال"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingBottom="12dp" />

            <!-- زر الشراء -->
            <Button
                android:id="@+id/checkoutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🛍️ إتمام الشراء"
                android:textStyle="bold"
                android:textSize="16sp"
                android:backgroundTint="#220F84"
                android:textColor="#FFFFFF"
                android:elevation="6dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>